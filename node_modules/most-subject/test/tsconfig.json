{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "types": [
      "mocha",
      "node"
    ]
  },
  "include": [
    "../src/**/*.ts",
    "./**/*.ts"
  ]
}
